choice
	prompt	"Boundary i.MX6 board select"
	optional

config TARGET_A
	bool "a"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_ACL
	bool "acl"
	select HAS_CAAM
	select MX6_SMP

config TARGET_AP
	bool "ap"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

