choice
	prompt	"Boundary i.MX6 board select"
	optional

config TARGET_A
	bool "a"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_A2
	bool "a2"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_ACL
	bool "acl"
	select HAS_CAAM
	select MX6_SMP

config TARGET_AP
	bool "ap"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_ASH
	bool "ash"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_ASH2
	bool "ash2"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_BT
	bool "bt"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_BT2
	bool "bt2"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_CAD
	bool "cad"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_CID
	bool "cid"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_CID_TAB
	bool "cid_tab"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_CNT
	bool "cnt"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_COB
	bool "cob"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_COB2
	bool "cob2"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_DASH
	bool "dash"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_EO
	bool "eo"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_H
	bool "h"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_H4
	bool "h4"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_HL
	bool "hl"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_HP
	bool "hp"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_NITROGEN6X
	bool "nitrogen6x"
	depends on MX6DL || MX6Q || MX6QDL || MX6S
	imply USB_ETHER_ASIX
	imply USB_ETHER_MCS7830
	imply USB_ETHER_SMSC95XX
	imply USB_HOST_ETHER

endchoice

config MX6QP
	bool "mx6qp support"
	depends on MX6Q || MX6QDL

