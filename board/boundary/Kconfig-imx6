config TARGET_DASH
	bool "dash"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_EO
	bool "eo"
	depends on MX6DL || MX6Q || MX6QDL || MX6S

config TARGET_H
	bool "h"
